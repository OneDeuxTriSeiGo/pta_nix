# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{rst}]
max_line_length = 79
indent_style = space
indent_size = 2

[*.{nix}]
max_line_length = 99
indent_style = space
indent_size = 2

[*.{hledger}]
max_line_length = 199
indent_style = space
indent_size = 2

